{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "browserify": {
    "transform": [
      "babelify",
      "reactify"
    ]
  },
  "main": "main.js",
  "scripts": {
    "build": "NODE_ENV=production browserify main.js | uglifyjs -cm > resources/public/bundle.js",
    "test": "jest",
    "sass": "node-sass src/scss/base.scss resources/public/main.css --source-map resources/public/main.css.map",
    "lint": "jsxhint src/js/**/* test/js/**/*",
    "watchJs": "watchify main.js -o resources/public/bundle.js -dv",
    "watchCss": "watch 'npm run sass' src/scss",
    "watchTest": "watch 'npm run test' src/js test/js",
    "watchLint": "watch 'npm run lint' src/js test/js"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "babel": "6.3.13",
    "babelify": "7.2.0",
    "browser-sync": "2.7.13",
    "browserify": "12.0.1",
    "clipboard": "^1.5.5",
    "flux": "2.1.1",
    "history": "1.13.1",
    "jquery": "2.1.4",
    "localforage": "1.3.0",
    "lodash": "3.10.1",
    "minifyify": "7.1.0",
    "moment": "^2.10.6",
    "node-sass": "3.4.2",
    "node-uuid": "1.4.7",
    "promise": "7.0.4",
    "react": "0.14.3",
    "react-addons-linked-state-mixin": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-router": "1.0.2",
    "reactify": "^1.1.1",
    "scale-text": "0.2.2",
    "tap": "2.3.1",
    "validate.js": "^0.9.0",
    "watchify": "^3.2.3",
    "whatwg-fetch": "^0.10.1"
  },
  "devDependencies": {
    "babel-jest": "6.0.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "chromedriver": "2.20.0",
    "jest-cli": "0.8.1",
    "jsxhint": "0.15.1",
    "standard": "4.5.4",
    "standard-format": "1.6.0",
    "tape": "2.3.3",
    "uglify": "~0.1.5",
    "uglify-js": "^2.6.1",
    "watch": "0.16.0"
  },
  "jest": {
    "testRunner": "<rootDir>/node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "setupEnvScriptFile": "<rootDir>/test/js/jest/setupEnv.js",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/lodash"
    ],
    "testDirectoryName": "test/js",
    "testPathIgnorePatterns": [
      "node_modules",
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "author": "Build Canaries",
  "license": "EPL-1.0",
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  }
}

{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "build:schema-validator": "ajv compile -s src/client/configuration/schema.json -o src/client/configuration/ValidateConfiguration.js --remove-additional --all-errors",
    "test": "jest --colors",
    "test:coverage": "jest --maxWorkers=2 --colors --coverage",
    "test:journey": "npm run cypress",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/client ./test/client --ext .js,.ts,.tsx",
    "lint:css": "stylelint \"src/client/**/*.scss\" --syntax scss",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "jest --watch",
    "watch:lint": "watch 'npm run lint' src/client test/client",
    "check-types": "tsc"
  },
  "dependencies": {
    "bourbon-neat": "4.0.0",
    "classnames": "2.2.6",
    "clipboard": "2.0.4",
    "core-js": "3.4.8",
    "date-fns": "2.8.1",
    "fp-ts": "2.2.0",
    "localforage": "1.7.3",
    "lodash": "4.17.15",
    "modularscale-sass": "3.0.10",
    "mousetrap": "1.6.3",
    "normalize.css": "8.0.1",
    "project-name-generator": "2.1.7",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-modal": "3.11.1",
    "react-redux": "7.1.3",
    "react-router-dom": "5.1.2",
    "react-tabs": "3.0.0",
    "redux-starter-kit": "1.0.1",
    "regenerator-runtime": "0.13.3",
    "semver": "6.3.0",
    "superagent": "5.1.2",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@babel/plugin-proposal-object-rest-spread": "7.7.4",
    "@babel/preset-env": "7.7.6",
    "@babel/preset-react": "7.7.4",
    "@babel/preset-typescript": "7.7.4",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "@types/classnames": "2.2.9",
    "@types/clipboard": "2.0.1",
    "@types/jest": "24.0.23",
    "@types/lodash": "4.14.149",
    "@types/lolex": "5.1.0",
    "@types/mousetrap": "1.6.3",
    "@types/react": "16.9.16",
    "@types/react-dom": "16.9.4",
    "@types/react-modal": "3.10.1",
    "@types/react-redux": "7.1.5",
    "@types/react-router-dom": "5.1.3",
    "@types/react-tabs": "2.3.1",
    "@types/superagent": "4.1.4",
    "@types/uuid": "3.4.6",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "ajv": "6.10.2",
    "ajv-cli": "3.0.0",
    "autoprefixer": "9.7.3",
    "axe-core": "3.4.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "browserslist": "4.8.2",
    "copy-webpack-plugin": "5.1.0",
    "css-loader": "3.3.0",
    "cypress": "3.7.0",
    "cypress-axe": "0.5.3",
    "eslint": "6.7.2",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "file-loader": "5.0.2",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "imagemin": "7.0.1",
    "imagemin-optipng": "7.1.0",
    "imagemin-svgo": "7.0.0",
    "img-loader": "3.0.1",
    "jest": "24.9.0",
    "jest-junit": "10.0.0",
    "lolex": "5.1.1",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.13.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-loader": "3.0.0",
    "raw-loader": "4.0.0",
    "react-test-renderer": "16.12.0",
    "resolve-url-loader": "3.1.1",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.1",
    "stylelint": "12.0.0",
    "stylelint-config-standard": "19.0.0",
    "stylelint-order": "3.1.1",
    "stylelint-scss": "3.13.0",
    "typescript": "3.7.3",
    "url-loader": "3.0.0",
    "watch": "1.0.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-merge": "4.2.2",
    "workbox-webpack-plugin": "4.3.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "generator-star-spacing": "error",
      "object-shorthand": "error",
      "arrow-parens": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-empty-interface": "off"
    }
  },
  "eslintIgnore": [
    "src/client/configuration/ValidateConfiguration.js"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "scss/at-rule-no-unknown": true,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "scss/no-duplicate-dollar-variables": true,
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-colon-space-after": "always",
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/test/client"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./target/coverage-reports/client",
    "collectCoverageFrom": [
      "<rootDir>/src/client/**/*.{js,ts,tsx}",
      "!<rootDir>/src/client/styleGuide/**",
      "!<rootDir>/src/client/common/Logger.ts",
      "!<rootDir>/src/client/configuration/ValidateConfiguration.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/client/setupTestEnv.js"
    ],
    "transform": {
      "\\.(js|ts|tsx)$": "babel-jest",
      "\\.txt$": "<rootDir>/test/client/fileTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|svg|ttf|woff|woff2|mp3)$": "<rootDir>/test/client/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "jest-junit": {
    "suiteName": "client tests",
    "outputDirectory": "./target/test-reports/client",
    "outputName": "test-results.xml"
  }
}

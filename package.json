{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "build:schema-validator": "ajv compile -s src/client/reducers/schema.json -o src/client/reducers/ValidateConfiguration.js --remove-additional --all-errors",
    "test": "jest --colors",
    "test:coverage": "jest --maxWorkers=2 --colors --coverage",
    "test:journey": "npm run cypress",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/client ./test/client",
    "lint:css": "stylelint \"src/client/**/*.scss\" --syntax scss",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "jest --watch",
    "watch:lint": "watch 'npm run lint' src/client test/client"
  },
  "dependencies": {
    "bourbon-neat": "3.0.1",
    "classnames": "2.2.6",
    "clipboard": "2.0.4",
    "core-js": "3.0.1",
    "date-fns": "1.30.1",
    "history": "4.9.0",
    "immutable": "4.0.0-rc.12",
    "localforage": "1.7.3",
    "lodash": "4.17.11",
    "modularscale-sass": "3.0.8",
    "mousetrap": "1.6.3",
    "normalize.css": "8.0.1",
    "project-name-generator": "2.1.6",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-modal": "3.8.1",
    "react-redux": "7.0.3",
    "react-router-dom": "5.0.0",
    "react-tabs": "3.0.0",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8",
    "redux-immutable": "4.0.0",
    "redux-thunk": "2.3.0",
    "regenerator-runtime": "0.13.2",
    "semver": "6.0.0",
    "superagent": "5.0.5",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "ajv": "6.10.0",
    "ajv-cli": "3.0.0",
    "autoprefixer": "9.5.1",
    "axe-core": "3.2.2",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "browserslist": "4.5.6",
    "copy-webpack-plugin": "5.0.3",
    "css-loader": "2.1.1",
    "cypress": "3.2.0",
    "cypress-axe": "0.4.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "eslint": "5.16.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-mocha": "5.3.0",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-react-hooks": "1.6.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "imagemin": "6.1.0",
    "imagemin-optipng": "6.0.0",
    "imagemin-svgo": "7.0.0",
    "img-loader": "3.0.1",
    "jest": "24.7.1",
    "jest-junit": "6.4.0",
    "lolex": "4.0.1",
    "mini-css-extract-plugin": "0.6.0",
    "node-sass": "4.12.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "3.0.0",
    "raw-loader": "2.0.0",
    "react-test-renderer": "16.8.6",
    "resolve-url-loader": "3.1.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "stylelint-order": "3.0.0",
    "stylelint-scss": "3.6.1",
    "url-loader": "1.1.2",
    "watch": "1.0.2",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-merge": "4.2.1",
    "workbox-webpack-plugin": "4.3.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "babel",
      "react",
      "react-hooks",
      "mocha"
    ],
    "parser": "babel-eslint",
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "generator-star-spacing": "error",
      "object-shorthand": "error",
      "arrow-parens": "error",
      "babel/new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Map",
            "List",
            "Set",
            "OrderedSet",
            "OrderedMap",
            "Record"
          ]
        }
      ],
      "mocha/no-exclusive-tests": "error",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "eslintIgnore": [
    "src/client/reducers/ValidateConfiguration.js"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "scss/at-rule-no-unknown": true,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "scss/no-duplicate-dollar-variables": true,
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-colon-space-after": "always",
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/test/client"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./target/coverage-reports/client",
    "setupFilesAfterEnv": [
      "<rootDir>/test/client/setupTestEnv.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|svg|ttf|woff|woff2|mp3)$": "<rootDir>/test/client/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "jest-junit": {
    "suiteName": "client tests",
    "outputDirectory": "./target/test-reports/client",
    "outputName": "test-results.xml"
  }
}

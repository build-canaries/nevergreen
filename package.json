{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "test": "jest --colors",
    "test:coverage": "jest --maxWorkers=2 --colors --coverage",
    "test:journey": "npm run cypress",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/client --ext .js,.ts,.tsx",
    "lint:css": "stylelint \"src/client/**/*.scss\" --syntax scss",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "jest --watch",
    "watch:lint": "watch 'npm run lint' src/client",
    "check-types": "tsc",
    "check-updates": "ncu"
  },
  "dependencies": {
    "@juggle/resize-observer": "3.3.1",
    "@reduxjs/toolkit": "1.6.2",
    "classnames": "2.3.1",
    "clipboard": "2.0.8",
    "core-js": "3.18.3",
    "date-fns": "2.25.0",
    "fp-ts": "2.11.5",
    "io-ts": "2.2.16",
    "localforage": "1.10.0",
    "lodash": "4.17.21",
    "match-sorter": "6.3.1",
    "mousetrap": "1.6.5",
    "normalize.css": "8.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-modal": "3.14.3",
    "react-redux": "7.2.5",
    "react-router-dom": "5.3.0",
    "react-tabs": "3.2.2",
    "react-transition-group": "4.4.2",
    "regenerator-runtime": "0.13.9",
    "screenfull": "5.1.0",
    "semver": "7.3.5",
    "superagent": "6.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/plugin-proposal-object-rest-spread": "7.15.6",
    "@babel/preset-env": "7.15.8",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@testing-library/cypress": "8.0.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.4.1",
    "@types/classnames": "2.3.0",
    "@types/clipboard": "2.0.1",
    "@types/jest": "27.0.2",
    "@types/lodash": "4.14.175",
    "@types/mousetrap": "1.6.8",
    "@types/react": "17.0.30",
    "@types/react-dom": "17.0.9",
    "@types/react-modal": "3.13.1",
    "@types/react-redux": "7.1.19",
    "@types/react-router-dom": "5.3.1",
    "@types/react-tabs": "2.3.3",
    "@types/react-transition-group": "4.4.3",
    "@types/semver": "7.3.8",
    "@types/superagent": "4.1.13",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "autoprefixer": "10.3.7",
    "axe-core": "4.3.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "browserslist": "4.17.4",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.4.0",
    "css-minimizer-webpack-plugin": "3.1.1",
    "cypress": "8.6.0",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "4.12.4",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.4.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.3.0",
    "jest-junit": "13.0.0",
    "mini-css-extract-plugin": "2.4.2",
    "npm-check-updates": "11.8.5",
    "postcss": "8.3.9",
    "postcss-loader": "6.2.0",
    "raw-loader": "4.0.2",
    "react-test-renderer": "17.0.2",
    "resolve-url-loader": "4.0.0",
    "sass": "1.43.2",
    "sass-loader": "12.2.0",
    "style-loader": "3.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.21.0",
    "typescript": "4.4.4",
    "url-loader": "4.1.1",
    "watch": "1.0.2",
    "webpack": "5.58.2",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.0",
    "webpack-merge": "5.8.0",
    "workbox-webpack-plugin": "6.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "testing-library"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "17.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      },
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "generator-star-spacing": "error",
      "object-shorthand": "error",
      "arrow-parens": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-empty-interface": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.[jt]s?(x)"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      }
    ],
    "ignorePatterns": ["fileTransformer.js"]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "scss/at-rule-no-unknown": true,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "scss/no-duplicate-dollar-variables": true,
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-colon-space-after": "always",
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/client"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./target/coverage-reports/client",
    "collectCoverageFrom": [
      "<rootDir>/src/client/**/*.{js,ts,tsx}",
      "!<rootDir>/src/client/styleGuide/**",
      "!<rootDir>/src/client/common/Logger.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/client/setupTestEnv.js"
    ],
    "transform": {
      "\\.(js|ts|tsx)$": "babel-jest",
      "\\.txt$": "<rootDir>/src/client/fileTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|svg|ttf|woff|woff2|mp3)$": "<rootDir>/src/client/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom"
  },
  "jest-junit": {
    "suiteName": "client tests",
    "outputDirectory": "./target/test-reports/client",
    "outputName": "test-results.xml"
  }
}

{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "build:schema-validator": "ajv compile -s src/client/reducers/schema.json -o src/client/reducers/ValidateConfiguration.js --remove-additional --all-errors",
    "test": "NODE_ENV=dev mocha --require @babel/polyfill --require ./test/client/Setup.js --require @babel/register -R mocha-circleci-reporter --reporter-options mochaFile=./target/client/test-results.xml --recursive test/client",
    "test:coverage": "nyc --reporter=html npm test",
    "test:journey": "npm run cypress",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/client ./test/client",
    "lint:css": "stylelint \"src/client/**/*.scss\" --syntax scss",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "watch 'npm run test' src/client test/client",
    "watch:lint": "watch 'npm run lint' src/client test/client"
  },
  "dependencies": {
    "@babel/polyfill": "7.2.5",
    "bourbon-neat": "3.0.1",
    "classnames": "2.2.6",
    "clipboard": "2.0.4",
    "date-fns": "1.30.1",
    "history": "4.7.2",
    "immutable": "4.0.0-rc.12",
    "localforage": "1.7.3",
    "lodash": "4.17.11",
    "memoize-one": "5.0.0",
    "modularscale-sass": "3.0.8",
    "mousetrap": "1.6.2",
    "normalize.css": "8.0.1",
    "project-name-generator": "2.1.6",
    "prop-types": "15.7.2",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-modal": "3.8.1",
    "react-redux": "6.0.1",
    "react-router-dom": "4.3.1",
    "react-tabs": "3.0.0",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8",
    "redux-immutable": "4.0.0",
    "redux-thunk": "2.3.0",
    "semver": "5.6.0",
    "superagent": "4.1.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.3.3",
    "@babel/plugin-proposal-class-properties": "7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "ajv": "6.9.1",
    "ajv-cli": "3.0.0",
    "autoprefixer": "9.4.8",
    "axe-core": "3.1.2",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "browserslist": "4.4.1",
    "chai": "4.2.0",
    "chai-enzyme": "1.0.0-beta.1",
    "chai-immutable": "1.6.0",
    "copy-webpack-plugin": "5.0.0",
    "css-loader": "2.1.0",
    "cypress": "3.1.5",
    "cypress-axe": "0.3.0",
    "dirty-chai": "2.0.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.9.1",
    "eslint": "5.14.1",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-mocha": "5.3.0",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.0.2",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "ignore-styles": "5.0.1",
    "imagemin": "6.1.0",
    "imagemin-optipng": "6.0.0",
    "imagemin-svgo": "7.0.0",
    "img-loader": "3.0.1",
    "jsdom": "13.2.0",
    "lolex": "3.1.0",
    "mini-css-extract-plugin": "0.5.0",
    "mocha": "6.0.0",
    "mocha-circleci-reporter": "0.0.3",
    "node-sass": "4.11.0",
    "nyc": "13.3.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "3.0.0",
    "proxyquire": "2.1.0",
    "raw-loader": "1.0.0",
    "react-test-renderer": "16.8.2",
    "resolve-url-loader": "3.0.1",
    "sass-loader": "7.1.0",
    "sinon": "7.2.4",
    "sinon-chai": "3.3.0",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "2.0.0",
    "stylelint-scss": "3.5.3",
    "url-loader": "1.1.2",
    "watch": "1.0.2",
    "webpack": "4.29.5",
    "webpack-cli": "3.2.3",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-merge": "4.2.1",
    "whatwg-url": "7.0.0",
    "workbox-webpack-plugin": "3.6.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "babel",
      "react",
      "react-hooks",
      "mocha"
    ],
    "parser": "babel-eslint",
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "generator-star-spacing": "error",
      "object-shorthand": "error",
      "arrow-parens": "error",
      "babel/new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Map",
            "List",
            "Set",
            "OrderedSet",
            "OrderedMap",
            "Record"
          ]
        }
      ],
      "mocha/no-exclusive-tests": "error",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "eslintIgnore": [
    "src/client/reducers/ValidateConfiguration.js"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "scss/at-rule-no-unknown": true,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "scss/no-duplicate-dollar-variables": true,
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-colon-space-after": "always",
      "order/properties-alphabetical-order": true
    }
  }
}

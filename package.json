{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "test": "jest --colors",
    "test:coverage": "jest --maxWorkers=2 --colors --coverage",
    "test:journey": "npm run cypress",
    "test:all": "npm run lint:fix && npm t && npm run test:journey",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "lint:js": "eslint ./src/client --ext .js,.ts,.tsx",
    "lint:css": "stylelint \"src/client/**/*.scss\"",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "jest --watch",
    "watch:lint": "watch 'npm run lint' src/client",
    "check-types": "tsc",
    "check-updates": "ncu"
  },
  "dependencies": {
    "@juggle/resize-observer": "3.3.1",
    "@reduxjs/toolkit": "1.8.1",
    "classnames": "2.3.1",
    "clipboard": "2.0.11",
    "core-js": "3.22.5",
    "date-fns": "2.28.0",
    "fp-ts": "2.12.1",
    "io-ts": "2.2.16",
    "localforage": "1.10.0",
    "lodash": "4.17.21",
    "match-sorter": "6.3.1",
    "mousetrap": "1.6.5",
    "normalize.css": "8.0.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-modal": "3.15.1",
    "react-query": "3.39.0",
    "react-redux": "8.0.1",
    "react-router-dom": "6.3.0",
    "react-transition-group": "4.4.2",
    "regenerator-runtime": "0.13.9",
    "screenfull": "5.2.0",
    "semver": "7.3.7",
    "superagent": "7.1.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@testing-library/cypress": "8.0.2",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.2.0",
    "@types/classnames": "2.3.0",
    "@types/clipboard": "2.0.1",
    "@types/jest": "27.5.1",
    "@types/lodash": "4.14.182",
    "@types/mousetrap": "1.6.9",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "@types/react-modal": "3.13.1",
    "@types/react-transition-group": "4.4.4",
    "@types/semver": "7.3.9",
    "@types/superagent": "4.1.15",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "autoprefixer": "10.4.7",
    "axe-core": "4.4.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.5",
    "browserslist": "4.20.3",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "3.4.1",
    "cypress": "9.6.1",
    "eslint": "8.15.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-testing-library": "5.5.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "jest-junit": "13.2.0",
    "mini-css-extract-plugin": "2.6.0",
    "npm-check-updates": "12.5.11",
    "postcss": "8.4.13",
    "postcss-loader": "6.2.1",
    "raw-loader": "4.0.2",
    "react-test-renderer": "18.1.0",
    "resolve-url-loader": "5.0.0",
    "sass": "1.51.0",
    "sass-loader": "12.6.0",
    "style-loader": "3.3.1",
    "stylelint": "14.8.2",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.2.0",
    "typescript": "4.6.4",
    "url-loader": "4.1.1",
    "watch": "1.0.2",
    "webpack": "5.72.1",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-merge": "5.8.0",
    "workbox-webpack-plugin": "6.5.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "testing-library"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "17.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      },
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "generator-star-spacing": "error",
      "object-shorthand": "error",
      "arrow-parens": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-empty-interface": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.[jt]s?(x)"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      }
    ],
    "ignorePatterns": [
      "fileTransformer.js"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "selector-class-pattern": "[a-zA-Z]",
      "scss/at-extend-no-missing-placeholder": null,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-rule-no-unknown": true,
      "scss/dollar-variable-colon-space-after": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/no-duplicate-dollar-variables": true,
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/client"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./target/coverage-reports/client",
    "collectCoverageFrom": [
      "<rootDir>/src/client/**/*.{ts,tsx}",
      "!<rootDir>/src/client/styleGuide/**",
      "!<rootDir>/src/client/common/Logger.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/client/setupTestEnv.js"
    ],
    "transform": {
      "\\.(js|ts|tsx)$": "babel-jest",
      "\\.txt$": "<rootDir>/src/client/fileTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|svg|ttf|woff|woff2|mp3)$": "<rootDir>/src/client/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy",
      "^uuid$": "<rootDir>/node_modules/uuid/dist/index.js"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "fakeTimers": {
      "enableGlobally": true
    }
  },
  "jest-junit": {
    "suiteName": "client tests",
    "outputDirectory": "./target/test-reports/client",
    "outputName": "test-results.xml"
  }
}

{
  "name": "nevergreen",
  "version": "0.0.0",
  "description": "A build monitor with attitude",
  "private": true,
  "author": "Build Canaries",
  "homepage": "https://nevergreen.io",
  "license": "EPL-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/build-canaries/nevergreen.git"
  },
  "bugs": {
    "url": "https://github.com/build-canaries/nevergreen/issues"
  },
  "scripts": {
    "clean": "rm -rf resources/public",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "build": "webpack --progress --config config/webpack.dev.config.js",
    "build:prod": "webpack --config config/webpack.prod.config.js",
    "test": "jest --colors",
    "test:coverage": "jest --maxWorkers=2 --colors --coverage",
    "test:journey": "npm run cypress",
    "test:all": "npm run lint:fix && npm t && npm run test:journey",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "lint:js": "eslint ./src/client --ext .js,.ts,.tsx",
    "lint:css": "stylelint \"src/client/**/*.scss\"",
    "watch:js": "npm run clean && webpack --watch --config config/webpack.dev.config.js",
    "watch:test": "jest --watch",
    "watch:lint": "watch 'npm run lint' src/client",
    "check-types": "tsc",
    "check-updates": "npm-check-updates",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "@juggle/resize-observer": "3.4.0",
    "@reduxjs/toolkit": "1.9.1",
    "@tanstack/react-query": "4.19.1",
    "classnames": "2.3.2",
    "clipboard": "2.0.11",
    "core-js": "3.26.1",
    "date-fns": "2.29.3",
    "fp-ts": "2.13.1",
    "io-ts": "2.2.20",
    "localforage": "1.10.0",
    "lodash": "4.17.21",
    "match-sorter": "6.3.1",
    "mousetrap": "1.6.5",
    "normalize.css": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "3.16.1",
    "react-redux": "8.0.5",
    "react-router-dom": "6.4.4",
    "react-transition-group": "4.4.5",
    "regenerator-runtime": "0.13.11",
    "screenfull": "5.2.0",
    "semver": "7.3.8",
    "superagent": "8.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@babel/plugin-proposal-object-rest-spread": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@testing-library/cypress": "8.0.7",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/classnames": "2.3.0",
    "@types/clipboard": "2.0.1",
    "@types/jest": "29.2.4",
    "@types/lodash": "4.14.191",
    "@types/mousetrap": "1.6.11",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/react-modal": "3.13.1",
    "@types/react-transition-group": "4.4.5",
    "@types/semver": "7.3.13",
    "@types/superagent": "4.1.16",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "autoprefixer": "10.4.13",
    "axe-core": "4.5.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "9.1.0",
    "browserslist": "4.21.4",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.2",
    "css-minimizer-webpack-plugin": "4.2.2",
    "cypress": "11.2.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "5.9.1",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-junit": "15.0.0",
    "mini-css-extract-plugin": "2.7.2",
    "npm-check-updates": "16.4.3",
    "postcss": "8.4.19",
    "postcss-loader": "7.0.2",
    "prettier": "2.8.1",
    "raw-loader": "4.0.2",
    "react-test-renderer": "18.2.0",
    "resolve-url-loader": "5.0.0",
    "sass": "1.56.1",
    "sass-loader": "13.2.0",
    "style-loader": "3.3.1",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.9.3",
    "url-loader": "4.1.1",
    "watch": "1.0.2",
    "webpack": "5.75.0",
    "webpack-bundle-analyzer": "4.7.0",
    "webpack-cli": "5.0.1",
    "webpack-merge": "5.8.0",
    "workbox-webpack-plugin": "6.5.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie <= 11"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "testing-library"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "18.0"
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      },
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "object-shorthand": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-empty-interface": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.[jt]s?(x)"
        ],
        "extends": [
          "plugin:testing-library/react"
        ]
      }
    ],
    "ignorePatterns": [
      "fileTransformer.js"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss"
    ],
    "rules": {
      "font-family-name-quotes": "always-where-required",
      "function-url-quotes": "always",
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "selector-class-pattern": "[a-zA-Z]",
      "scss/at-extend-no-missing-placeholder": null,
      "scss/at-function-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-mixin-pattern": "^_{0,1}[a-z-]+$",
      "scss/at-rule-no-unknown": true,
      "scss/dollar-variable-colon-space-after": "always",
      "scss/dollar-variable-colon-space-before": "never",
      "scss/dollar-variable-pattern": "^_{0,1}[a-z-]+$",
      "scss/double-slash-comment-whitespace-inside": "always",
      "scss/no-duplicate-dollar-variables": true,
      "scss/percent-placeholder-pattern": "^_{0,1}[a-z-]+$",
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src/client"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./target/coverage-reports/client",
    "collectCoverageFrom": [
      "<rootDir>/src/client/**/*.{ts,tsx}",
      "!<rootDir>/src/client/styleGuide/**",
      "!<rootDir>/src/client/common/Logger.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/client/testUtils/setupTestEnv.js"
    ],
    "transform": {
      "\\.(js|ts|tsx)$": "babel-jest",
      "\\.txt$": "<rootDir>/src/client/testUtils/fileTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|svg|ttf|woff|woff2|mp3)$": "<rootDir>/src/client/testUtils/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "fakeTimers": {
      "enableGlobally": true
    }
  },
  "jest-junit": {
    "suiteName": "client tests",
    "outputDirectory": "./target/test-reports/client",
    "outputName": "test-results.xml"
  }
}
